<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head')  %>
    <title>HomePage</title>
</head>
<body>
    <%-include('./partials/nav')  %>

    <div class="container">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="">
        <p><%= blog.body %></p>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profilImageUrl %>" style="width: 60px; height: 50px;" alt="">  <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-4">
        <h1>comment</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                  <input type="text" name="content" class="form-control" placeholder="Enter Your Comment">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>

        <% } %>
        <div class="mt-3">
            <% comment.forEach(commo => { %>
                <div>
                    <img src="<%= commo.createdBy.profilImageUrl %>" style="width: 60px; height: 50px;" alt="">  
                    <%= commo.createdBy.fullName %>:<pre><%= commo.content %></pre>

                </div>
            <% }) %>
          </div>
    </div>
    <%-include('./partials/scripts')  %>

</body>
</html>